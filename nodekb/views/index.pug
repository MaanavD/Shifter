      /*Header*/
      .header{
      height: 700px;
      width: 100%;
      background-color: #FF4E50;
      background-position: center center;
      background-repeat: no-repeat;
      background-size: cover;
      background: radial-gradient(#EDE574,#FF4E50);
      color: #fff;
      }
      .header img{
      display: block;
      margin-left: auto;
      margin-right: auto;
      width: 65%;
      margin-bottom: 0px;
      margin-top: 0px;
      padding-bottom: 60px;
      padding-top: 70px;
      }
      .header .btn{
      border-radius: 90;
      }
      .header .btn-primary {
      background-color: #FFF;
      color: #FF4E50;
      border-color: #FF4E50;
      }
      #wrapper {
      text-align: center;
      margin-top: 0px;
      align-items: center;
      justify-content: center;
      padding-top: 0px;
      clear: both;
      }
      }
      .header .row control-group {
      display: block;
      margin-left: auto;
      margin-right: auto;
      width: 85%;
      height: 70%;
      }
